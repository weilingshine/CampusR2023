@model CampusR.Models.ViewModels.CampusListViewModel

@{ //各區顯示設定
   
    var northClass = (Model.mapCode==1) ? "" : "none" ;
    var north2Class = (Model.mapCode==6) ? "" : "none";
    var centralClass = (Model.mapCode==2) ? "" : "none";
    var southClass = (Model.mapCode==3) ? "" : "none";
    var otherClass = (Model.mapCode==4) ? "" : "none";
}
@*北區-北北基宜*@
<div id="north_tab" style="display:@northClass">
    @{
        if (Model.NorthList == null || Model.NorthList.Count == 0)
        {
            <ul class="session_list">
                <li class="newsession_st02" role="tab">
                    <div class="container">
                        <div class="row flbox">
                            <div class="col-12 school color_pink">
                                該縣市目前無校徵場次，可以查詢其他縣市看看喔
                            </div>
                        </div>
                    </div>
                </li>
            </ul>
        }
        else
        {
            <ul class="session_list">
                @Html.Partial("IndexTabLiPartial", Model.NorthList)
            </ul>
            if (Model.isFromCity)
            {
                <div class="list_more">
                    <a href="@Url.Action("List", "CampusR", new { area = "1" })">
                        查看北北基宜所有場次<i class="fa fa-angle-double-right" aria-hidden="true"></i>
                    </a>
                </div>
            }
            else 
            {
                <div class="list_more">
                <a href="@Url.Action("List", "CampusR", new { area = "1" })">
                    查看所有場次<i class="fa fa-angle-double-right" aria-hidden="true"></i>
                </a>
                </div>
            }
            
        }
    }
</div>
